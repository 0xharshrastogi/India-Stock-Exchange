{
	"compilerOptions": {
		"target": "ES2019",
		"module": "CommonJS",
		"moduleResolution": "node",
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"declaration": false,
		"outDir": "build"
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
